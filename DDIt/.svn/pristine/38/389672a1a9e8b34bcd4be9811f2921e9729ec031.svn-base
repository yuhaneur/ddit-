	let answerNo = replyBtn.dataset.num;
	let answerDepth = replyBtn.dataset.depth;
    let replyParent = replyBtn.closest("#reply");
    console.log(replyParent);
    let answerCn = replyParent.querySelector("#replyCn").value;

    console.log("대댓글 answerCn : ", answerCn);
	console.log("대댓글 answerNo : ", answerNo);
	console.log("대댓글 answerDepth : ", answerDepth);
	
	
}