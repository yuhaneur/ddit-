@import url('https://fonts.googleapis.com/css2?family=Black+Han+Sans&display=swap');

/* 제목 폰트 */
h1,h2,h3,h4,h5,h6 {
  font-family: "Noto Sans KR", sans-serif;
  font-optical-sizing: auto;
  font-weight: 800;
  font-style: normal;
}

.svg-size {
	width : 12px;
	height: 12px;
}
.svg-size2 {
	width : 20px;
	height : 20px;
}

/* 본문 내용 폰트 */
p {
  font-family: "Noto Sans KR", sans-serif;
  font-optical-sizing: auto;
  font-weight: 600;
  font-style: normal;
}

a {
  font-family: "Noto Sans KR", sans-serif;
  font-optical-sizing: auto;
  font-weight: 600;
  font-style: normal;
}

span {
  font-family: "Noto Sans KR", sans-serif;
  font-optical-sizing: auto;
  font-weight: 800;
  font-style: normal;
}


/* 아래 class 추가로도 적용이 가능함. */

/* 두꺼운 글씨용 고딕형 폰트 */
.black-han {
  font-family: "Black Han Sans", sans-serif;
  font-weight: 400;
  font-style: normal;
}

.noto-sans {
  font-family: "Noto Sans KR", sans-serif;
  font-optical-sizing: auto;
  font-weight: 800; /* 400 500 ~ 900 : 100 단위로 폰트 두께 설정 가능 */
  font-style: normal;
}


/* ==================================== 댓글 아코디언 css ==================================== */

  *{
  box-sizing: border-box; 
}
  
.que{
  position: relative;
  padding: 7px 0;
  cursor: pointer;
  font-size: 14px;
  border-bottom: 1px solid #dddddd;
  
}
  
.que.on>span{
  font-weight: bold;
  color: #006633; 
}
  
.anw {
  display: none;
    overflow: hidden;
  font-size: 14px;
  background-color: white;
  padding: 27px 0;
}

.arrow-wrap {
  position: absolute;
  top:50%; right: 10px;
  transform: translate(0, -50%);
}

.que .arrow-top {
  display: none;
}
.que .arrow-bottom {
  display: block;
}
.que.on .arrow-bottom {
  display: none;
}
.que.on .arrow-top {
  display: block; 
}

