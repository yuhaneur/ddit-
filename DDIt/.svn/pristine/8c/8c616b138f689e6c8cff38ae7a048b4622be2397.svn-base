@charset "UTF-8";

.itemDiv{
	display: flex;
	justify-content: center;
	width: 100%;
	height: 100%;
}

.itemImgDiv {
	position: relative;
	display: flex;
	justify-content: center;
	width: 250px;
	height: 250px;
	display: inline-block;
}

.itemCtgry2-mo{
 	display : flex;
	position: absolute;
	justify-content : center;
	align-items : center;
	width: 100%;
	height: 100%;
	border-radius: 50%;
	border :1px solid gray;
	pointer-events: none;
	font-size: 1.5rem;
    font-weight: bold;
}

.itemCtgry2Div a{
	text-decoration: none;
	color: white;
}


.itemCtgry1Div{
	position: absolute;
	top: 0;
    left: 0;
	width: 100%;
	height: 100%;
	border-radius: 50%;
	pointer-events: none;
	z-index: 2;
}

.itemCtgry2Div {
	position: relative;
	top: 0;
    left: 0;
	top: 50%; 
	left: 50%; 
	transform: translate(-50%, -50%);
	z-index: 1;
}


.itemCtgry3Div{
	position: absolute;
	top: 0;
    left: 0;
	width: 250px;
	height: 250px;
	border-radius: 50%;
	pointer-events: none;
	z-index: 3;
}


.itemImgDiv img{
	position: relative;
	top: 0;
	left: 0;
	width: 250px;
	height: 250px;

}

.itemImgDiv svg{
	position: absolute;
	width: 250px;
	height: 250px;
	right: 0;
	top: 0;
	transform: translateY(-50%);
	animation: rotation 5s linear infinite;

}

#itemCtgry2p{
  font-size: 30px;
}

/* 회전 애니메이션*/
@keyframes rotation {
  from {
    transform: rotate(0deg); /* 0도 회전부터 시작 */
  }
  to {
    transform: rotate(360deg); /* 한 번 회전을 위해 360도 회전 */
  }
}


/*아이템 카테고리2 item2 filterHover 시작*/
.itemCtgry2-item2 {
	display: flex;
	justify-content: center;
}

.itemCtgry2-item2-1 {
  margin: 0;
  position: relative;
  width: 250px;
  height: 250px;
}

.itemCtgry2-item2-1 img {
  width: 250px;
  height: 250px;
  object-fit: cover;
  transition: filter 0.5s ease-in-out;
}

.itemCtgry2-item2-1 p {
  position: absolute;
  opacity: 0;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  margin: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 1.5rem;
  font-weight: bold;
  color: #fff;
  background-color: #000;
  transition: opacity 0.5s ease-in-out;
  border-radius: 50%;
}

.itemCtgry2-item2-1:hover img {
  filter: brightness(50%);
}

.itemCtgry2-item2-1:hover p {
  opacity: 1;
}
/*아이템 카테고리2 item2 filterHover 끝*/


/*아이템 카테고리2 item7 transformHover 시작*/
.itemCtgry2-item7 {
  width: 250px;
  height: 250px;
  perspective: 1000px;
}

.itemCtgry2-item7 a {
  width: 100%;
  height: 100%;
  display: block;
  text-decoration: none;
  color: inherit;
}

.itemCtgry2-item7-1 {
  position: relative;
  transition: transform 0.8s;
  transform-style: preserve-3d;
  width: 100%;
  height: 100%;
}

.itemCtgry2-item7-2 {
  width: 100%;
  height: 100%;
}

.itemCtgry2-item7:hover .itemCtgry2-item7-1 {
  transform: rotateY(180deg);
}

.itemCtgry2-item7-2 img {
  position: absolute;
  backface-visibility: hidden;
  width: 250px;
  height: 250px;
  border-radius: 50%;
}

.itemCtgry2-item7-3 {
  position: absolute;
  backface-visibility: hidden;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  margin: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  
  font-size: 1.5rem;
  font-weight: bold;
  color: #fff;
  background-color: #000;
  transform: rotateY(180deg);
  border-radius: 50%;
}
/*아이템 카테고리2 item7 transformHover 끝*/


/*아이템 카테고리2 item10 polygonHover 시작*/
.itemCtgry2-item10 {
  position: relative;
  z-index: 1;
  top: 0;
  left: 0;
  width: 250px;
  height: 250px;
  margin: 0;
  
  display: flex;
  justify-content: center;
  align-items: center;
	
  overflow: hidden;
  border-radius: 50%;
} 

.itemCtgry2-item10 img{
	width: 250px;
	height: 250px;
	object-fit: cover;
	  z-index: -2;
}


.itemCtgry2-item10::before,
.itemCtgry2-item10::after {
  content: '';
  position: absolute;

  top: 0;
  left: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
  
  background-color: #000;
  transition: transform 0.5s 0.2s;
}

.itemCtgry2-item10::before {
  top: 0;
  clip-path: polygon(0 0, 100% 0, 100% 50%, 0% 100%);
  transform: translateY(-100%);
}

.itemCtgry2-item10::after {
  bottom: -1px;
  clip-path: polygon(0 50%, 100% 0, 100% 100%, 0% 100%);
  transform: translateY(100%);
}

.itemCtgry2-item10:hover::before,
.itemCtgry2-item10:hover::after {
  transform: translateY(0);
}

.itemCtgry2-item10-1 {
  opacity: 0;
  transition: opacity 0.5s;
  position: absolute;
  justify-content: center;
  border-radius: 50%;
}

.itemCtgry2-item10 p {
  font-size: 1.5rem;
  font-weight: bold;
  color: #fff;
}

.itemCtgry2-item10:hover .itemCtgry2-item10-1 {
  opacity: 1;
  transition-delay: 0.5s;
    
}
/*아이템 카테고리2 item10 polygonHover 끝*/

