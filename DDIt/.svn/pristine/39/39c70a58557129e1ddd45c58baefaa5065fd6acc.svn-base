		/**
		 * 파일검증
		 */
		@SuppressWarnings("unused")
		private GrAtchFileVO validateAttatch(int atchFileNo) {
			GrAtchFileVO atch = Optional.ofNullable(atcdao.selectAttatch(atchFileNo))
					.orElseThrow(()->
					new BoardException(String.format("%d 해당 파일의 메타 정보가 없음.", atchFileNo)));
			 		File atchFile = new File(saveFolder, atch.getStreFileName());
			 		if(!atchFile.exists()) {
			 			throw new BoardException(String.format("%s 해당 파일이 없음.", atchFile.getAbsolutePath()));
			 		}
			 		atch.setBinary(new FileSystemResource(atchFile));
			 		return atch;
		}
		
		/**
		 * 파일읽기
		 */
		@Override
		public GrAtchFileVO selectAttatch(int atchFileNo) {
			GrAtchFileVO atch = validateAttatch(atchFileNo);
			atcdao.incrementDowncount(atchFileNo);
			return atch;
		}

		@Override
		public void deleteAttatch(int atchFileNo) {
			GrAtchFileVO atch = validateAttatch(atchFileNo);
			atcdao.deleteAttatch(atchFileNo);
			try {
				FileUtils.deleteQuietly(atch.getBinary().getFile());
			}catch(IOException e) {
				throw new BoardException(e);
			}
			
		}

		
