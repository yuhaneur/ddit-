}


// 피드 삭제 이벤트
function feedDelete(no) {
	let feedNo = no.dataset.num;
	let url = `${cPath}/sns/feedDelete.do`;
	let method = "DELETE";

	$.ajax({
		url : url,
		method : method,
		data : JSON.stringify(feedNo),
		dataType : "JSON",
        contentType:"application/json",
        success:function(resp){
            if(resp.result=="ok"){
                alert("삭제 성공");
                window.location.href = `${cPath}/sns/feedList.do`;
            }else{
                alert("삭제 실패");
            }

        }
	})
}
